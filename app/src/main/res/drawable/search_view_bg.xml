<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Couleur de fond -->
            <stroke
                android:width="1dp"
                android:color="@android:color/transparent" /> <!-- Masquer la bordure -->
            <corners android:radius="8dp" /> <!-- Rayon des coins -->
        </shape>
    </item>
</layer-list>
