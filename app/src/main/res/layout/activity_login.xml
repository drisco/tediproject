<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/fond">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Back button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            app:tint="@color/white" />

        <!-- Title "Créer un Compte" -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se connecter"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_below="@id/back_button"
            android:layout_marginTop="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <!-- Form container -->
            <RelativeLayout
                android:id="@+id/form_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/google_button_background"
                android:backgroundTint="#3CFFFFFF"
                android:padding="20dp">

                <!-- Phone Input with Icon -->
                <RelativeLayout
                    android:id="@+id/phone_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/phone"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        app:tint="@color/white"/>

                    <EditText
                        android:id="@+id/phone_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/phone_icon"
                        android:layout_marginStart="10dp"
                        android:hint="Numéros"
                        android:padding="10dp"
                        android:textColorHint="@android:color/white"
                        android:backgroundTint="@android:color/white"
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <!-- Address Input with Icon -->

                <!-- Password Input with Icon -->
                <RelativeLayout
                    android:id="@+id/password_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phone_container"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/password_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/password"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        app:tint="@color/white"/>

                    <EditText
                        android:id="@+id/password_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/password_icon"
                        android:layout_marginStart="10dp"
                        android:hint="Mot de passe"
                        android:padding="10dp"
                        android:inputType="textPassword"
                        android:textColorHint="@android:color/white"
                        android:backgroundTint="@android:color/white"
                        android:textColor="@android:color/white" />
                </RelativeLayout>

                <!-- Confirm Password Input with Icon -->

            </RelativeLayout>

            <!-- Sign Up Button -->
            <LinearLayout
                android:id="@+id/signup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/form_container"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/google_button_background"
                android:backgroundTint="@color/green"
                android:padding="15dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/enter"
                    app:tint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:text="Se connecter"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Or Divider -->
            <TextView
                android:id="@+id/or_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OU"
                android:layout_below="@id/signup_button"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal" />

            <!-- Google Sign Up Button -->
            <LinearLayout
                android:id="@+id/google_signup_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/or_divider"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/google_button_background"
                android:padding="15dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/user"
                    app:tint="@color/green"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="16sp"
                    android:text="S'inscrire"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

