<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/fond"
    android:padding="16dp">

    <!-- Image du logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:contentDescription="Logo de l'application" />

    <!-- Texte principal -->
    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nous nous\n engageons envers\n vous"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@id/logoImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Sous-texte -->
    <TextView
        android:id="@+id/sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pour que vous puissiez Gérer votre santé\na travers nos différents services efficaces,\n sécurisé et rapide"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:layout_below="@id/main_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <!-- Bouton Se connecter -->
    <LinearLayout
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/google_button_background"
        android:orientation="horizontal"
        android:gravity="center"
        android:backgroundTint="@color/green"
        android:layout_below="@id/sub_text"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/enter"
            android:contentDescription="Logo Google"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Se connecter"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>
    </LinearLayout>

<!-- Bouton S'inscrire -->
    <LinearLayout
        android:id="@+id/button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/google_button_background"
        android:orientation="horizontal"
        android:gravity="center"
        android:backgroundTint="@color/green"
        android:layout_below="@id/button_login"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user"
            android:contentDescription="Logo Google"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S'inscrire"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>
    </LinearLayout>


<!-- Bouton Se connecter avec Google -->
<LinearLayout
    android:id="@+id/google_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/google_button_background"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_below="@id/button_register"
    android:layout_marginTop="20dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:layout_centerHorizontal="true">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/email"
        android:contentDescription="Logo Google"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se connecter avec"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="10dp"/>
</LinearLayout>

</RelativeLayout>
